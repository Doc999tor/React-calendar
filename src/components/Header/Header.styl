#header
  width 100%
  height 60px
  display flex
  justify-content center
  align-items center
  position fixed
  top 0
  left 0
  z-index 2
  background-color var(--main-bgcolor)
  button
    border none
    background-color transparent
    &:focus
      outline none
  .today_wrap
    margin-inline-end 1rem
  .menu_refresh
    position absolute
    display flex
    justify-content space-around
    align-items center
    width 20%
    height 100% 
  .menu_rtl
    right .6rem
  .menu_ltr
    left .6rem
    img
      transform scale(-1, 1)
  #refresh_button
    display flex
    justify-content center
    align-items center

    width 2.5rem
    height 2.5rem
    img
      width 15px
      height 19px
  .more_wrap
    display flex
    justify-content center
    align-items center
    width 2.5rem
    height 2.5rem
  .middle-section
    width 50%
    height 100%
    display flex
    justify-content space-around
    align-items center
    .rtlStyle
      transform rotate(180deg)
    .current_date
      display flex
      flex-direction column
      justify-content center
      align-items center
      font-weight 900
    .common
      display flex
      align-items center
      justify-content center
      height 100%
      width 2rem
    span
      color #fff
      text-align center
      font-size 20px
    .today
      font-size 20px
    .for_today
      font-size 10px
    .this_week
      font-size 10px
  .header_right
    position absolute
    // height 100%
    width 20%
    display flex
    justify-content flex-end
    align-items center
    button
      display flex
      flex-direction column
      align-items center
      justify-content space-between
      width 40%
      color white
      font-size .6rem
      .img_today
      .img_view
        margin-bottom 7px
    button:active
      outline none
    button:focus
      outline none
  .disabled
    opacity 0
  .view_buttons_rtl
    left 1rem
  .view_buttons_ltr
    right 1rem