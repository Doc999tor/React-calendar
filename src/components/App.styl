@import 'variables.css'
@import 'calendar-variables.css'
html
body
#root
.app
  //height 100%
body
p
  font-family var(--font-family)
  margin 0
#swiper-calendar
  //padding-inline-start 34px
  //-webkit-padding-start 34px
  //-moz-padding-start 34px
  .fc-today
    background-color #fff
  .fc-toolbar.fc-header-toolbar
    display none
  // .fc-timeGridDay-view
  .fc-daily-view
  .fc-weekly-view
    // thead
    //   display none
    tbody
      .fc-day-grid
      .fc-divider
        display none
  .custom-slide
    height 100vh
    width 100%
    background-color rgba(255, 20, 147, .7)
    border 1px solid black
    p
      text-align center
      color white
      font-size 2rem
      font-weight bold
  .fc-daily-view
    .fc-day-header
      display: none
  .fc-monthly-view
    //height 550px
    .fc-day-header
      vertical-align middle
      height 32px
      border 1px solid #ededed
      background-color #ffffff
      span
        font-weight normal
        font-size 10px
        letter-spacing 0.1px
    .fc-day-grid
      .fc-more
        font-size 8px
.calendar-without-workers
  margin-top 60px
.calendar-with-workers
  margin-top 160px


