@import 'variables.css'
@import 'calendar-variables.css'
html
body
#root
.app
  //height 100%
  .modal-loading
    position fixed
    top 0
    left 0
    display flex
    flex-direction column
    height 100%
    width 100%
    z-index 9
    overflow auto
    opacity 0.6
    background-color var(--dark-color)
body
p
  font-family var(--font-family)
  margin 0
  //padding-inline-start 34px
  //-webkit-padding-start 34px
  //-moz-padding-start 34px
  .fc-today
    background-color #fff
  .fc-toolbar.fc-header-toolbar
    display none
  // .fc-timeGridDay-view
  .fc-daily-view
  .fc-weekly-view
    // thead
    //   display none
    tbody
      .fc-day-grid
      .fc-divider
        display none
  .custom-slide
    height 100vh
    width 100%
    background-color rgba(255, 20, 147, .7)
    border 1px solid black
    p
      text-align center
      color white
      font-size 2rem
      font-weight bold
  .fc-daily-view
    .fc-day-header
      display: none
  .fc-monthly-view
    //height 550px
    .fc-day-header
      vertical-align middle
      height 32px
      border 1px solid #ededed
      background-color #ffffff
      span
        font-weight normal
        font-size 10px
        letter-spacing 0.1px
    .fc-day-grid
      .fc-more
        font-size 8px
.calendar-without-workers
  margin-top 60px
.calendar-with-workers
  margin-top 160px

.event-shadow
  box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
  -webkit-box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
  -moz-box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)

.floating-button
  position fixed
  display flex
  justify-content center
  align-items center
  background-color var(--main-bgcolor)
  border-radius 50%
  width 56px
  height 56px
  z-index 1
  -webkit-box-shadow 0px 6px 10px 0px rgba(50, 50, 50, 0.58)
  -moz-box-shadow 0px 6px 10px 0px rgba(50, 50, 50, 0.58)
  box-shadow 0px 6px 10px 0px rgba(50, 50, 50, 0.58)
  .cross
    color var(--white-color)
  &.standartRight
    bottom 30px
    right 30px
  &.standartLeft
    bottom 30px
    left 30px

.containerCarousel
  &.daily-view
    padding-inline-start 34px
    -webkit-padding-start 34px
    -moz-padding-start 34px
  &.RTL
    direction: rtl


@media only screen and (min-width: 610px) {
  .standartLeft {
    left: 50%;
    transform: translate(-515%);
  }
  .standartRight {
    right: 50%;
    transform: translate(515%);
  }
}
